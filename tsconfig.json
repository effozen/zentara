{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@zentara/*": ["./packages/*/src"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "module": "esnext",
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "isolatedModules": true
  },
  "include": ["packages/**/*"],
  "exclude": ["**/node_modules", "**/dist"]
}
